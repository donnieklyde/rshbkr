generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("POSTGRES_PRISMA_URL") // uses connection pooling
  directUrl = env("POSTGRES_URL") // uses a direct connection
}

model User {
  id            String    @id @default(cuid())
  name          String?
  username      String?   @unique
  email         String?   @unique
  emailVerified DateTime?
  image         String?
  accounts      Account[]
  sessions      Session[]
  tracks        Track[]
  ratings       Rating[]
  comments      Comment[]
  
  isOnboarded   Boolean   @default(false)
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt
}

model Account {
  id                 String  @id @default(cuid())
  userId             String
  type               String
  provider           String
  providerAccountId  String
  refresh_token      String?
  access_token       String?
  expires_at         Int?
  token_type         String?
  scope              String?
  id_token           String?
  session_state      String?

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@unique([provider, providerAccountId])
}

model Session {
  id           String   @id @default(cuid())
  sessionToken String   @unique
  userId       String
  expires      DateTime
  user         User     @relation(fields: [userId], references: [id], onDelete: Cascade)
}

model VerificationToken {
  identifier String
  token      String   @unique
  expires    DateTime

  @@unique([identifier, token])
}

model Track {
  id          String   @id @default(cuid())
  title       String
  artistId    String
  artist      User     @relation(fields: [artistId], references: [id], onDelete: Cascade)
  fileUrl     String
  description String?
  
  ratings     Rating[]
  comments    Comment[]

  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt
}

model Rating {
  id        String   @id @default(cuid())
  trackId   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)

  // The 10 Poetic Criteria (0-10)
  feelingStart  Int? // Feeling / Vibe
  ideaIntent    Int? // Idea / Intent
  soundTexture  Int? // Sound / Texture
  melodyHarmony Int? // Melody & Harmony
  rhythmGroove  Int? // Rhythm & Groove
  lyrics        Int? // Lyrics
  originality   Int? // Originality
  commitment    Int? // Commitment
  context       Int? // Context
  aftertaste    Int? // Aftertaste

  summary       String? // Overall comment describing the rating

  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt

  @@unique([userId, trackId]) // One rating per track per user
}

model Comment {
  id        String   @id @default(cuid())
  content   String
  trackId   String
  userId    String
  user      User     @relation(fields: [userId], references: [id], onDelete: Cascade)
  track     Track    @relation(fields: [trackId], references: [id], onDelete: Cascade)
  
  createdAt DateTime @default(now())
}
